{
  "name": "Netizen",
  "version": "0.0.1",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    },
    {
      "variable": "background_image",
      "label": "Background Image",
      "description": "Adds a repeating background image"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow_images",
      "label": "Slideshow",
      "description": "Adds a slideshow to the Home page",
      "defaults": [
        "slide-1.jpg"
      ]
    },
    {
      "variable": "lookbook_images",
      "label": "Lookbook",
      "description": "This is a lookbook"
    }
  ],
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Lexend Deca"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Lexend Deca"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#F8F8F9"
    },
    {
      "variable": "alt_background_color",
      "label": "Alternate Background",
      "default": "#ffffff"
    },
    {
      "variable": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "variable": "accent_color",
      "label": "Accent Color",
      "default": "#EEFF8A"
    },
    {
      "variable": "alt_accent_color",
      "label": "Alternate Accent Color",
      "default": "#FBFFE2"
    },
    {
      "variable": "pattern_color",
      "label": "Pattern color",
      "default": "#000000"
    },
    {
      "variable": "primary_gradient_color",
      "label": "Primary gradient color",
      "default": "#d1fbff"
    },
    {
      "variable": "secondary_gradient_color",
      "label": "Secondary gradient color",
      "default": "#ffa5e8"
    },
    {
      "variable": "border_color",
      "label": "Border color",
      "default": "#000000"
    }
  ],
  "options": [
      {
      "variable": "welcome_header",
      "label": "Welcome header",
      "type": "text",
      "description": "Welcome header for homepage",
      "default": "Welcome header for homepage"
    },
    {
      "variable": "welcome_subheader",
      "label": "Welcome subheader",
      "type": "text",
      "description": "Welcome subheader for homepage",
      "default": "Welcome subheader for homepage"
    },
    {
      "variable": "welcome_button_text",
      "label": "Welcome button",
      "type": "text",
      "description": "Welcome button text on Home page that links to the Products page",
      "default": "Shop now"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Shows a search field"
    },
    {
      "variable": "featured_items",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products featured on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 30,
      "description": "The number of products shown per page"
    },
    {
      "variable": "show_overlay",
      "label": "Product list info",
      "type": "select",
      "options": [
        ["On rollover", "rollover"],
        ["Under image", "under_image"]
      ],
      "default": "rollover",
      "description": "Shows a product's name & price on hover, or under the image"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel",
      "default": "http://pinterest.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel",
      "default": "http://pinterest.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com",
      "default": "http://pinterest.com/bigcartel"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel",
      "default": "http://pinterest.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel",
      "default": "http://pinterest.com/bigcartel"
    }
  ]
}
